@{
    ViewData["Title"] = "Create/Edit Expenses";
}

@model SpendTracker.Models.Expenses

<div class="text-center">
    <h1 class="display-4">Create Edit Expenses</h1>
</div>
<form asp-action="CreateEditExpenseForm" asp-controller="Home" method="post">
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id" />
    <label class="mt-4">Expense</label>
    <input class="form-control" type="number" placeholder="0$" asp-for="Expense" step="0.01"/>
    <label class="mt-4">Description</label>
    <input class="form-control" type="text"  placeholder="Add a Description" asp-for="Description" />
    <button class="btn btn-primary mr-4" type="submit">Add Expense</button>
</form>