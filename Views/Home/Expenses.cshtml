@{
    ViewData["Title"] = "Expenses";
}
@model List<Expenses>
<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <hr />
    <h3>Total Expenses: $ @ViewBag.Expenses</h3>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Value</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var expenses in Model)  
                {
                <tr>
                <td>@expenses.Id</td>
                <td>@expenses.Expense</td>
                <td>@expenses.Description</td>
                <td>
                <a asp-action="CreateEditExpenses" asp-route-id="@expenses.Id">Edit</a>
                <a asp-action="DeleteExpense" asp-route-id="@expenses.Id">Delete</a>
                </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>